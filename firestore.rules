rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /estimates/{estimateId} {
      // Admins can read any estimate
      // Regular users can only read their own
      allow read: if request.auth != null && (request.auth.token.admin == true || resource.data.userId == request.auth.uid);

      // Only authenticated users can create an estimate for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Admins can list all estimates. Regular users cannot.
      allow list: if request.auth != null && request.auth.token.admin == true;
    }
  }
}